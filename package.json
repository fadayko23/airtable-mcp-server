{
  "name": "airtable-mcp-server",
  "version": "1.6.1",
  "description": "A Model Context Protocol server that provides read and write access to Airtable databases. This server enables LLMs to inspect database schemas, then read and write records.",
  "license": "MIT",
  "author": "Adam Jones (domdomegg)",
  "repository": {
    "type": "git",
    "url": "https://github.com/domdomegg/airtable-mcp-server.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": "dist/index.js",
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json",
    "vercel-build": "npm run build && npm run build:api",
    "build:api": "tsc --project tsconfig.api.json",
    "build:watch": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "build:dxt": "./build-dxt.sh",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@vercel/node": "^3.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "@types/node": "^22.10.2",
    "eslint": "^9.32.0",
    "eslint-config-domdomegg": "^2.0.9",
    "nodemon": "^3.1.7",
    "tsconfig-domdomegg": "^1.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
